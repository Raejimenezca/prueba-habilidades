<div class="container p-4">
    <div class="row">
            {{!-- totals, muestra los datos que va recorriendo --}}
            {{#each totals}}
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <p class="m-2">
                               Pedido # {{id_pedido}}                        
                        </p>
                        <p class="m-2">
                           Total: $ {{sum}}    
                        </p>
                    </div>
                </div>
            </div>
            {{!-- en caso de que no haya un valor al recorrer el bucle --}} 
            {{else}}
                <div class="col-md-4 mx-auto">
                    <div class="card card-body text-center">
                        <p>No hay pedidos guardados a√∫n</p>
                    </div>
                </div>
            {{/each}}
    </div>
</div>