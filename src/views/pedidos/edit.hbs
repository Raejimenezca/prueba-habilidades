<!-- Modificar los valores de un registro -->

<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/pedidos/edit/{{link.id}}" method="POST">
                        <div class="form-group">
                            {{!-- input de tipo texto, var: titulo, para el usuario: Titulo, autofocus para que cuando se recargue la pagina
                            el cursor ya est√© posicionado en 'input'
                            'value', muestra el valor que tiene actualmente en la DB
                             --}}
                            <input type="text" value="{{link.title}}" class="form-control" name="title" placeholder="Titulo" autofocus>
                        </div>
                        <div class="form-group">
                            {{!-- type url, valida que la entrada sea una url --}}
                            <input type="url" value="{{link.url}}" name="url" class="form-control" placeholder="URL">
                        </div>
                        <div class="form-group">
                            <textarea name="description" rows="2" class="form-control" placeholder="Descripcion">{{link.description}}</textarea>
                        </div>
                        <div class="form-group">
                            {{!-- btn-success, para que sea un boton verde y btn-blocl, para que ocupe todo el ancho disponible --}}
                            <button class="btn btn-success btn-block">
                                Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>